<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        card_view:cardBackgroundColor="#f6f6f6"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_margin="7dp"
        android:padding="5dp"
        card_view:cardUseCompatPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:padding="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:src="@drawable/gymcard"/>

                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginTop="5dp"
                            android:id="@+id/tvIDp"
                            android:fontFamily="@font/poppinsbold"
                            android:textSize="18sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ID: " />

                        <TextView
                            android:id="@+id/tvManageNamep"
                            android:fontFamily="@font/poppinsmedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="14dp"
                            android:text="Harshit" />

                        <TextView
                            android:id="@+id/dateOfJoining"
                            android:fontFamily="@font/poppinsmedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:text="Date Of Joining" />
                        <TextView
                            android:id="@+id/PlanPayment"
                            android:fontFamily="@font/poppinsmedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:text="Plan" />

                        <LinearLayout
                            android:layout_marginTop="20dp"

                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_back">

                                <TextView
                                    android:padding="3dp"
                                    android:id="@+id/tvSetPaymentp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/poppinsbold"
                                    android:gravity="center"
                                    android:text="Set Payment"
                                    android:clickable="true"
                                    android:textColor="#fff"
                                    android:textSize="20dp" />

                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>






            </LinearLayout>


        </RelativeLayout>




    </androidx.cardview.widget.CardView>

</LinearLayout>