<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wave"
    tools:context=".UserProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/profile"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"/>

    <androidx.cardview.widget.CardView
        android:layout_below="@id/ivProfile"
        app:cardElevation="10dp"
        android:id="@+id/cardName"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:text="Harshit (User name)"
            android:textColor="#000"
            android:textSize="17dp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_below="@id/cardName"
        app:cardElevation="10dp"
        android:id="@+id/cardGender"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/tvGender"
            android:layout_width="match_parent"
            android:text="Gender"
            android:textColor="#000"
            android:textSize="17dp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_below="@id/cardGender"
        app:cardElevation="10dp"
        android:id="@+id/cardAge"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/tvAge"
            android:layout_width="match_parent"
            android:text="Age"
            android:textColor="#000"
            android:textSize="17dp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_below="@id/cardAge"
        app:cardElevation="10dp"
        android:id="@+id/cardBloodGroup"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/tvBloodGroup"
            android:layout_width="match_parent"
            android:text="Blood Group"
            android:textColor="#000"
            android:textSize="17dp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_below="@id/cardBloodGroup"
        app:cardElevation="10dp"
        android:id="@+id/cardHeight"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/tvHeight"
            android:layout_width="match_parent"
            android:text="Height in cm"
            android:textColor="#000"
            android:textSize="17dp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_below="@id/cardHeight"
        app:cardElevation="10dp"
        android:id="@+id/cardWeight"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/tvWeight"
            android:layout_width="match_parent"
            android:text="Weight in kg"
            android:textColor="#000"
            android:textSize="17dp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/illustration"
        android:layout_alignParentBottom="true"/>/

</RelativeLayout>